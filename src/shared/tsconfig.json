{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "module": "NodeNext",
        "target": "esnext",
        "outDir": "./dist",
        "strict": false,
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["./*.ts", "./*.js", "config.ts"],
    "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
