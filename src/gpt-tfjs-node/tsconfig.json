{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "module": "NodeNext",
        "target": "esnext",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "incremental": true,
        "checkJs": false,
        "paths": {
            "@/*": ["./*"],
            "~/*": ["../shared/*"] // doesn't work unfortunately
        }
    },
    "include": ["../../shared/**/*.ts", "./**/*.ts", "./**/*.js", "decs.d.ts"],
    "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
