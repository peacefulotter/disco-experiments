{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "esnext",
        "outDir": "./dist",
        "strict": false, // can't set strict because of gpt-tfjs that has no declarations
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./*"],
            "~/*": ["../shared/*"] // doesn't work unfortunately
        }
    },
    "include": ["./**/*.ts", "./**/*.js"],
    "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
