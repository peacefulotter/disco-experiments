{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "checkJs": false,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"],
            "~/*": ["../../shared/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "decs.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.mjs",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
